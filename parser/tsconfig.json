{
    "compilerOptions": {
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "target": "es2018",
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "outDir": "./built",
        "rootDir": "./src"
    },
    "include": [
        "./src/**/**/*",
        "./src/*.json"
    ],
    "exclude": [
        "./node_modules"
    ]
}